<h1>Listing foods</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Green</th>
    <th>Vitamin c</th>
    <th>Protein</th>
    <th>Calcium</th>
    <th>Fruits and veg</th>
    <th>Whole grain</th>
    <th>Iron rich</th>
    <th>Fat food</th>
    <th>Vitamins</th>
	<th>Daily Need</th>
  	<th>Serving Value</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @foods.each do |food| %>
  <tr>
    <td><%= food.name %></td>
    <td><%= food.green %></td>
    <td><%= food.vitamin_c %></td>
    <td><%= food.protein %></td>
    <td><%= food.calcium %></td>
    <td><%= food.fruits_and_veg %></td>
    <td><%= food.whole_grain %></td>
    <td><%= food.iron_rich %></td>
    <td><%= food.fat_food %></td>
    <td><%= food.vitamins %></td>
	<td><%= food.daily_need %></td>
	<td><%= food.serving_value %></td>	
    <td><%= link_to 'Show', food %></td>
    <td><%= link_to 'Edit', edit_food_path(food) %></td>
    <td><%= link_to 'Destroy', food, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

